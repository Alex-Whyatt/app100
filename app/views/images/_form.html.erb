<div class="container" style="padding-top: 200px;height:100%;padding-left: 25px;width:50%">
  <div class="card" style="float:left;background-color:#f1f8ff;">
    <div class="container" style="padding-left: 25px;%">
      <%= form_with(model: image, local: true) do |form| %>
        <% if image.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>

            <ul>
              <% image.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :title, "Enter the title:" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <br>

        <div class="field" style="height:175px">
          <%= form.label :body, "Describe the masterpiece:" %>
          <%= form.rich_text_area :body, class: "form-control" %>
        </div>

        <div class="field">
          <%= form.label :drawing, "Upload your image!" %>
          <%= form.file_field :drawing, multiple: false, direct_upload: true %>
        </div>

        <div class="field">
          <%= form.label :album_id, "Select your Album" %>
          <br>
            <%= form.collection_radio_buttons(:album_id, @album, :id, :title) %>
        </div>

        <div class="actions" style="padding-left: 550px">
          <br>
          <%= form.submit "Upload" %>
        </div>
        <br>
      <% end %>

      <%= link_to 'Back', images_path %>

    </div>
  </div>
</div>