<p id="notice"><%= notice %></p>
<div class="container" style="min-width: 80%;padding-top:200px;padding-left:75px;float:left;height:50%;margin: 0">
    <h2>albums</h2>
    <% @albums.each do |album| %>    
          <div class="card" style="border-color: white;width:auto;float:left;padding-left: 25px;padding-top:50px">
            <%= link_to image_tag(album.thumbnail_f), images_url(:id => album.id) %>
            <a class="nav-link" style="color: black;font-family: sans-serif;font-size: 12px;text-align: center;"href="<%= images_url(:id => album.id) %>"><%= album.title %> | <span class="badge badge-dark"><%= album.images.count %></span></a>
          </div>
    <% end %>
    <div class="container" style="float:left;padding-left: 50px;padding-top: 50px;padding-bottom: 100px">
    <%= link_to 'New Album', new_album_path, class: 'btn btn-dark btn-sml' %>

  <div class="container" style="padding-top:100px;">
    <% @images.each do |img| %>
        <div class="card" style="border-color: white;width:auto;float:left;padding-right:25px">
        <%= image_tag(img.drawing_c) %>
        <%= link_to img.title, img, class: "btn btn-sml"%>
        </div>
    <% end %>
  </div>
</div>

