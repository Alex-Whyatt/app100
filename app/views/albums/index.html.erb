<p id="notice"><%= notice %></p>
<div class="container" style="padding-top: 200px;height:100%;padding-left: 150px;">
    <% @albums.each do |album| %>
        <div class="container" style="width:auto;float:left;padding-top: 75px">
          <div class="card">
            <%= link_to image_tag(album.thumbnail_f), images_url(:id => album.id) %>
          <%= link_to album.title, images_url(:id => album.id), class: "btn btn-light" %><span class="badge badge-light"><%= album.images.count %></span>
          </div>
        </div>
    <% end %>
</div>
<br>
  <%= link_to 'New Album', new_album_path %>
</div>
